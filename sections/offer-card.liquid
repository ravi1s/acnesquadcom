<!-- ===============Offer Card ======================-->
<div class="mainquizIntrosec brick--margin p-relative border-bottom">
  <div class="offercardsec card-m">
    {% for block in section.blocks %}
    <div class="mainquizIntrocntnt">
      <div class="offer-card-block">
        <div class="desktop">
          <a href="{{ block.settings.Button_Url}}">
          <img class="quizIntroImg lazyload desktop offer-image" loading="lazy" data-src="{{ block.settings.image1 | img_url : 'master'}}" title="" alt="{{ block.settings.sllideTitle }}" width="100%" height="100%">
          </a>
          </div>
        <div class="mobile">
        <a href="{{ block.settings.Button_Url}}">
          <img class="quizIntroImg lazyload mobile offer-image" loading="lazy" data-src="{{ block.settings.image_mobile | img_url : 'master'}}" title="" alt="{{ block.settings.sllideTitle }}" width="100%" height="100%">
        </a>
        </div> 
          <h1 class="quizIntrottl ">{{ block.settings.sllideTitle }}</h1>
        <h3 class="quizIntrobldttl textbtmMargin">{{ block.settings.slideHead }}</h3>   
<!--         <p class="QuizDes textbtmMargin">{{ block.settings.slideDes}}</p> -->
      </div>
<!--       <a href="{{ block.settings.Button_Url}}">
        <div class="mainQuizeIntroBtn homebtnslideDes">
          <p>{{ block.settings.Button_des}}</p>
        </div>
      </a> -->
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "slick1",
    "settings": [
],
 
"blocks": [
    {
      "type": "slickslider",
      "name": "slick Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image dekstop"
        },
         {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image mobile"
        },
        {
          "type": "text",
          "id": "sllideTitle",
          "label": "sllide Title "
         
        },
        {
          "type": "text",
          "id": "slideHead",
          "label": "sllide Heading "
        },
        {
          "type": "text",
          "id": "slideDes",
          "label": "Description"
        },
		{
          "type": "text",
          "id": "Button_des",
          "label": "button description"
        },
		{
          "type": "url",
          "id": "Button_Url",
          "label": "Image url"
        }
    ]
   }
  ],
  "presets": [
     {
    	"name": "Lightning Deals"
     }
  ]
}
{% endschema %}
<script type="text/javascript">
  $(document).on('ready', function() {
    $(".offercardsec").slick({
      infinite: false,
      slidesToShow:4,
      arrows:false,
      dots:true,
      autoplay:false,
      responsive: [
    {
      breakpoint: 768,
      settings: {
      slidesToShow: 1.5,
      centerMode: false, /* set centerMode to false to show complete slide instead of 3 */
      slidesToScroll: 1
      }
    }
   ]
    });
  });
</script>