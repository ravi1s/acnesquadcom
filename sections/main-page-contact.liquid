<!-- /sections/main-page-contact.liquid -->
{{ 'contact-us.css' | asset_url | stylesheet_tag }}
{%- assign animation_anchor = '#page--' | append: section.id -%}

{% if section.settings.show_content or section.settings.subheading != blank or section.settings.show_title %}  
  <section class="index-page {{ section.settings.text_color }} {{ section.settings.height }}" id="page--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="page">
    <div class="{{ section.settings.width }}">
      <div class="text__standard {{ section.settings.align_text }}">
        {% if section.settings.subheading != blank %}
          <p class="standard__subheading"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="1">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
        {% if section.settings.show_title %}
          <h2 class="h4 standard__heading"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="2">
            {{ page.title }}
          </h2>
        {% endif %}
        {% if section.settings.show_content %}
          {% assign font_size_class = section.settings.text_size | plus: 1 | prepend: 'font--' %}
          <div class="standard__rte_cstm {{ font_size_class }}"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="3">
            <div class="rte">
              <div class="globo-formbuilder" data-id="ODczMzE="></div>

   <div class="mainTrackDiv ">
     <div class="address-massage FeatureText__ImageWrappers   TextWrapper">
        <div class="track_you_order talk-customer">
          <div class="track"><i class="fa fa-users" aria-hidden="true"></i></div>
          <div class="track-order">
            <h5 class="head">CUSTOMER SERVICE</h5>
            <p class="Heading-contact">Toll Free Number</p> 
            <p class="disc-contact"><i class="fa fa-phone" aria-hidden="true"></i> <a target="_blank" href="tel:1800-20-35-544 <br>9 am to 6 pm, Monday - Saturday"> 1800-20-35-544 <br>9 am to 6 pm, Monday - Sunday</a><br></p> 
            <p class="Heading-contact">Email Us</p> 
            <p class="disc-contact"><i class="fa fa-envelope-o" aria-hidden="true"></i> <a target="_blank" href="mailto:support@acnesquad.com" rel="noopener noreferrer">support@acnesquad.com</a></p>    
          </div>
        </div>
        <div class="track_you_order talk-customer">
          <div class="track"><i class="fa fa-map-marker" aria-hidden="true"></i></div>
          <div class="track-order">
            <h5 class="head contact-heading">ORDER TRACKER</h5>
            <p class="Heading-contact">Track Order</p> 
            <p class="disc-contact"><i class="fa fa-map-marker" aria-hidden="true"></i> <a target="_blank" href="/pages/track-order"> Click here to track your order</a><br></p> 
             
                
          </div>
        </div>
      </div>
    </div>
          
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "Show content",
      "default": true
    },
    {
      "type":  "range",
      "id":    "text_size",
      "label": "Text size",
      "min":    1,
      "max":    5,
      "step":   1,
      "default":2
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Text alignment",
      "default": "text-left",
      "options": [
        {"value": "text-left","label": "Left"},
        {"value": "text-center","label": "Centered"}
      ]
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "default": "margin--medium",
      "options": [
        {"value": "margin--small", "label": "Small"},
        {"value": "margin--medium", "label": "Medium"},
        {"value": "margin--large", "label": "Large"}
      ]
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        {"value": "wrapper", "label": "Normal"},
        {"value": "wrapper--narrow", "label": "Narrow"},
        {"value": "wrapper--full", "label": "Wide"}
      ]
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "text-dark",
      "options": [
        { "value": "text-light", "label": "White"},
        { "value": "text-dark", "label": "Dark"}
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}




