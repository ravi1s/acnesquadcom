<!-- ===============homeslickslide2======================-->
<div class="page-width" id="custom_homeslick2">
<div class="mainquizIntrosec">
  <div class="mainquizIntrosntnt">
    {% for block in section.blocks %}
    {%- liquid assign image = block.settings.image1 -%}
    <div>
      <div class="mainquizIntrocntnt2">
        {% if image != blank %}
        <img class="lazyload" loading="lazy" data-src="{{ image | img_url : 'master'}}" alt="{{ block.settings.sllideTitle }}" title="" width="100%" height="100%" />
        {% endif %}
        {% if block.settings.sllideTitle != blank %}
        <div class="quizIntrocntnt ">
          <h1 class="quizIntrottl ">{{ block.settings.sllideTitle }}</h1>
          <h3 class="quizIntrobldttl textbtmMargin">{{ block.settings.slideHead }}</h3>   
          <p class="QuizDes textbtmMargin">{{ block.settings.slideDes}}</p>
        </div>
          {% endif %}
      {% if block.settings.Button_des != blank %}
        <a href="{{ block.settings.Button_Url}}">
          <div class="mainQuizeIntroBtn homebtnslideDes">
            <p>{{ block.settings.Button_des}}</p>
          </div>
        </a>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>
</div>

{% schema %}
  {
    "name": "slick",
    "settings": [
],
 
"blocks": [
    {
      "type": "slickslider",
      "name": "slick Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "sllideTitle",
          "label": "sllide Title "
         
        },
        {
          "type": "text",
          "id": "slideHead",
          "label": "sllide Heading "
         
        },
        {
          "type": "text",
          "id": "slideDes",
          "label": "Description"
        },
		{
          "type": "text",
          "id": "Button_des",
          "label": "button description"
        },
		{
          "type": "url",
          "id": "Button_Url",
          "label": "button url"
        }
    ]
   }
  ],
  "presets": [
     {
    	"name": "home slider2"
     }
  ]
}
{% endschema %}
<script type="text/javascript">
  $(document).on('ready', function() {
    $(".mainquizIntrosntnt").slick({
      infinite: false,
      slidesToShow:4,
      arrows:false,
      dots:true,
      autoplay:false,
      responsive: [
        {
          breakpoint: 1025,
          settings: {
            slidesToShow:3
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1.05
          }
        }
      ]

    });
  });
</script>
{% comment %}
{% style %}
.mainquizIntrocntnt2{
background-image: url({{ image | img_url : 'master'}})
}
{% endstyle %}
{% endcomment %}
<style>
    #custom_homeslick2:after {
    position: absolute;
    left: 50%;
    bottom: inherit;
    content: "";
    border-bottom: 1px solid #D5D5D5;
    height: 14px;
    max-width: 800px;
    transform: translate(-50%);
    width: calc(100% - 60px);
}
</style>