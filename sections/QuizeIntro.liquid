<!-- =============== Section/QuizeIntro ========================-->
<div class="container-fluid mainquizIntrosec">
  <div class=" flexWrap mainquizIntrottl">
    <h1 class="quizIntrottl textbtmMargin">{{ section.settings.title }}</h1>
    <h3 class="quizIntrobldttl textbtmMargin">{{ section.settings.mainTitle }}</h3>      
  </div>
  <div class="mainQuizWhiteBack">
  <p class="quizIntrodes">{{ section.settings.description }}</p>

<!--  Video section -->
          <div class="mainVideo quiz-video">
          <video preload="none" loop="loop" autoplay="autoplay" playsinline="" muted="" controls>
          <source type="video/mp4" src="{{ section.settings.backVideo1 }}">
          Your browser does not support HTML5 video.
          </video>
          </div>
<!-- End Video section -->

  <div class="mainquizIntrosntnt">
    {% for block in section.blocks %}
      {% if block.type == 'Quiz' %}
    {%- liquid assign image = block.settings.image1 -%}
    <div>
    <div class="mainquizIntrocntnt">
      <div class="quizIntrocntnt">
        <img class="QuizImg quizIntroImg" src="{{ block.settings.image1 | img_url : 'master'}}">
        
        <h1 class="quizIntrottl ">{{ block.settings.sllideTitle }}</h1>
<!--    <h1 class="quizIntrottl ">{{ block.settings.sllideTitle }}</h1>
        <h3 class="quizIntrobldttl textbtmMargin">{{ block.settings.slideHead }}</h3>   
        <p class="QuizDes textbtmMargin">{{ block.settings.slideDes}}</p> -->
        </div>
      <a href="{{ block.settings.Button_Url}}">
<!--         <div class="mainQuizeIntroBtn dflex">
          <h2>{{ block.settings.Button_Text}}</h2>
          <p>{{ block.settings.Button_des}}</p>
        </div> -->
      </a>
    </div>
    </div>
        {% endif %}
      {% if block.type == 'video' and block.settings.backVideo != 'blank' %}
        <div class="mainVideo">
          <video preload="none" loop="loop" autoplay="autoplay" playsinline="" muted="">
          <source type="video/mp4" src="{{ block.settings.backVideo }}">
          Your browser does not support HTML5 video.
        </video>
        </div>
      {% endif %}
    {% endfor %}
  </div>
      <div class="mainquizeintroBtmSlid">
        <p class="QuizDes textbtmMargin">{{ section.settings.description_2 }}</p>
        <div class="into-quiz-sec form-box">
        <div><input class="quizname quizIntroInput textbtmMargin" type="text" placeholder="Enter your name" required><br>
        <span class="quizerrors" id="qnameerror"></span>
        </div>
        <div> <input id="email_phone" class="quizphone quizIntroInput textbtmMargin" type="email" placeholder="Enter your Mobile No." required>
        <span class="quizerrors" id="quizphoneerror"></span>
        </div>
        </div>
        <div class="quizeintonxtback">
          <a href="{{section.settings.laterButnUrl}}" class="takeLaterBtn QuizBtn">{{ section.settings.lateTex }}</a>
          <input  type="submit" class="startBtn QuizstartBtn QuizBtn" value="Submit">
<!--           <a href="{{section.settings.start_url}}" class="startBtn QuizstartBtn QuizBtn">
            {{- section.settings.startText }}
          </a> -->
        </div>
      </div>
    </div>
</div>

