<script type="text/javascript">
  $(document).on('ready', function() {
    $(".mainquizIntrosntnt").slick({
      infinite: false,
      slidesToShow:4,
      arrows:true,
      autoplay:true,
      responsive: [
        {
          breakpoint: 1025,
          settings: {
            slidesToShow: 3,
            infinite: false
          }
        },
        {
          breakpoint: 769,
          settings: {
            slidesToShow: 1,
            infinite: false
          }
        }
      ]

    });

       if( $(window).width() > 767){  
    $('video').mouseenter(function(){
      this[this.paused ? 'play' : 'pause']();
    });
    $('video').mouseleave(function(){
      this[this.play ? 'pause' : 'play']();
    });
   }
    
  });

</script>
